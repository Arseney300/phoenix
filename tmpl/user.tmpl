<%c++ #include "user/user.h"%>
<%skin my_skin%>
<%view user_view uses user_content::content %>
<%template render()%>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title><%= title%></title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
  <!-- Bootstrap core CSS -->
  <link href="media/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="media/css/mdb.min.css" rel="stylesheet">
  <!-- Your custom styles (optional) -->
  <link href="media/css/style.css" rel="stylesheet">
  <!-- Specail font -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet"> 
  <!-- Special style for user_window -->
  <link rel="stylesheet" href="./css/user_window_style.css">
</head>
<style>
  main{
    font-family: Arial, "Times New Roman", sans-serif;

    height: auto;
    background-image: linear-gradient(to bottom, #fbbe4b, #f3b540, #ecab35, #e4a229, #dc991b);
  }
  
  
</style>
<body>
    <header> 
      <nav class="navbar navbar-expand-lg navbar-dark orange accent-4 fixed-top scrolling-navbar">
        <div class="container-fluid">
          <a href="/" class="navbar-brand waves-effect"><strong class="" style="font-size: 25px">PHOENIX</strong></a>   

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
           </button>   
        <div class="navbar-collapse collapse" id="navbarNav">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a href="news" class="nav-link"><%=left_title.first_button_name%><span class="sr-only">(current)</span></a></li>
            <li class="nav-item"><a href="contacts" class="nav-link"><%=left_title.second_button_name%></a></li>
            <li class="nav-item"><a href="https://github.com/Arseney300/phoenix" class="nav-link"><%=left_title.third_button_name%></a></li>
          </ul>
          <form method="POST" class="form-inline">
            <div class="md-form my-0">
              <input autocomplete="off" type="search" class="form-control mr-sm-2" name="input1" placeholder="<%=search.placeholder%>" id="input1" aria-label="Search">
              
            </div>
            <button class="btn btn-outline-white btn-md ml-2" type="button" onclick="go_to_note($('#input1').val())" ><%=search.button_name%></button>
          </form>
        </div> 
        </div>
      </nav>

    <div class="sidebar-fixed position-fixed">

      <div class="waves-effect">
        <h1>PHOENIX</h1>
      </div>

      <div class="list-group list-group-flush">
        <a href="#" class="list-group-item list-group-item-action waves-effect active">
          <i class="fas fa-user mr-3"></i>Личный кабинет
        </a>
        <a href="#" class="list-group-item list-group-item-action waves-effect">
          <i class="fa fa-plus mr-3"></i>Создание быстрой заметки</a>
        <a href="#" class="list-group-item list-group-item-action waves-effect">
          <i class="fa fa-sticky-note mr-3"></i>Создание личной заметки</a>
        <a href="#" class="list-group-item list-group-item-action waves-effect">
          <i class="fa fa-eye mr-3"></i>Просмотреть заметку</a>
        <a href="#" class="list-group-item list-group-item-action waves-effect">
          <i class="fa fa-archive  mr-3"></i>Личные заметки</a>
      </div>

    </div>

      
    </header>
    <main id="main" class="pt-5 max-lg-5">
      <div class="row pt-5 pl-3">
        <div class="col-md-4">
          <div class="card" style="height: 100%">
            <div class="card-body">
              <div class="card-title text-center"><H3>Смена пароля</H3></div>
                  <p>Введите старый пароль: </p>
                  <div class="md-form mt-0">
                    <i class="fas fa-key prefix"></i>
                    <input name="Login" type="password" id="inputText1" class="form-control">
                    <label for="inputText1">старый пароль</label>
                  </div>
                  <p>Введите новый пароль:</p>
                  <div class="md-form mt-0">
                    <i class="fas fa-key prefix"></i>
                    <input name="password_1" type="password" id="inputText2" class="form-control">
                    <label for="inputText2">новый пароль</label>
                  </div>
                  <p>Повторите новый пароль: </p>
                  <div class="md-form mt-0">
                    <i class="fas fa-key prefix"></i>
                    <input name="password_2" type="password" id="inputText3" class="form-control">
                    <label for="inputText3">повтор пароля</label>
                  </div>
                  <div class="text-center mt-0"><button class="btn btn-deep-orange" onclick="change_password()">Сменить пароль</button></div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card" style="height: auto">
            <div class="card-body">
              <div class="card-title text-center">
                <h3>Количество заметок:</h3>
              </div>
              <%=count_of_notes%>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card" style="height: auto">
            <div class="card-body">
              <div class="card-title">
                <h3>Удаление аккаунта:</h3>
              </div>
              <form action="">
                <div class="text-center mt-0">
                  <button class="btn btn-danger">Удалить пользователя</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>


  <!-- SCRIPTS -->
  <!-- AutoSize TextArea -->
  <script src="https://rawgit.com/jackmoore/autosize/master/dist/autosize.min.js"></script>
  <script>
    autosize(document.getElementById('QuickNoteTextArea'));

  </script>
  <!-- JQuery -->
  <script type="text/javascript" src="media/js/jquery-3.3.1.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="media/js/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="media/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="media/js/mdb.min.js"></script>
  <!-- Для мувов -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js"></script>    
  <script>
    function change_password(){
      var last_pass = $("#inputText1").val();
      var new_pass1 = $("#inputText2").val();
      var new_pass2 = $("#inputText3").val();
      $.post("/user/user_change_password",{"last_pass":last_pass, "password_1":new_pass1, "password_2":new_pass2},function(data) {
        alert(data);
      });
    }
  </script>>
</body>

</html>


<%end template%>

<%end view%>
<%end skin%>