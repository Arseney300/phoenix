<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.design.card.MaterialCardView
    app:cardBackgroundColor="#fff8e1"
    android:layout_marginHorizontal="5sp"
    app:cardCornerRadius="10sp"

    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="10sp"
        android:id="@+id/shownoteeditlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="8px"
        android:hint="@string/InputNoteID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/shownoteedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.button.MaterialButton
        android:layout_marginTop="8px"
        android:layout_marginBottom="10sp"
        android:id="@+id/shownotebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textAppearance="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginHorizontal="20sp"
        android:text="@string/Load"/>

</LinearLayout>
</android.support.design.card.MaterialCardView>
<android.support.design.card.MaterialCardView
    app:cardCornerRadius="10sp"
android:id="@+id/shownotecard"
android:visibility="invisible"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="@dimen/mtrl_card_spacing"
android:layout_marginTop="@dimen/mtrl_card_spacing"
android:layout_marginRight="@dimen/mtrl_card_spacing"
style="@style/Widget.MaterialComponents.CardView"
app:cardBackgroundColor="?attr/colorBackgroundFloating"
android:minHeight="200dp">
    <ProgressBar
        android:id="@+id/show_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>
<EditText
    android:visibility="gone"
    android:minLines="7"
    android:maxLines="7"
    android:gravity="top"
    android:textSize="20sp"
    android:textColor="#000000"
    android:layout_marginRight="40sp"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="7dp"
    android:id="@+id/shownotecardtext"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
<TextView
    android:visibility="gone"
    android:id="@+id/shownotecardmenu"
    android:layout_width="20sp"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:text="&#8942;"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    android:layout_gravity="right|top"
    android:layout_marginRight="20sp"
    android:layout_marginTop="10sp"/>
    <ImageButton
        android:id="@+id/shownote_attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_attach_file_black_24dp"
        style="@style/Widget.AppCompat.Light.ActionButton"
        android:layout_gravity="right"/>

</android.support.design.card.MaterialCardView>
</LinearLayout>